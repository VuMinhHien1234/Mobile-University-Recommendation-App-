<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ScrollView vẫn giữ nguyên để cuộn toàn bộ nội dung -->
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nav_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <include
                android:id="@+id/viewTopbar"
                layout="@layout/view_topbar" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Phương thức xét tuyển TN THPT" />

            <!-- Card mô tả bo góc (Nội dung được giữ nguyên) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_detail_outline"
                android:padding="12dp">
                <!-- 1. Đối tượng tuyển sinh -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="1. Đối tượng tuyển sinh"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2dp"
                    android:text="- Tuyển sinh theo quy chế tuyển sinh đại học hiện hành của Bộ GDĐT và LĐHQG...\n- Người đã được công nhận tốt nghiệp THPT của Việt Nam hoặc nước ngoài...\n- Thí sinh có hạnh kiểm tốt..." />

                <!-- 2. Điều kiện xét tuyển -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="2. Điều kiện xét tuyển"
                    android:paddingTop="10dp"
                    android:paddingBottom="6dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2dp"
                    android:text="- Điểm xét tuyển (ĐXT) THPT năm 2025 và có kết quả xét tuyển đạt ngưỡng điểm đầu vào...\n- Công thức tính: ĐXT = M1 + M2 + M3 + Điểm ưu tiên (nếu có)." />
            </LinearLayout>

            <!-- Tiêu đề bảng -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Điểm chuẩn 2025"
                android:paddingTop="12dp"
                android:paddingBottom="6dp"/>

            <!-- Header bảng -->
            <include layout="@layout/view_score_table_header"/>

            <!-- SỬA LỖI Ở ĐÂY: Thay RecyclerView bằng LinearLayout -->
            <LinearLayout
                android:id="@+id/llScoresContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>
    </ScrollView>

    <!-- BottomNavigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>