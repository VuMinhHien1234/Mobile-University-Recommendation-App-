<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="20dp"/>


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cơ sở vật chất"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imagecsvc1"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/img_bk"
        android:layout_marginTop="20dp"
        android:layout_below="@id/topBar"
        android:background="@drawable/rounded_img"
        android:clipToOutline="true"
        />

    <TextView
        android:id="@+id/header_titlecsvc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cở sở vật chất:"
        android:layout_below="@id/imagecsvc1"
        android:layout_alignLeft="@id/imagecsvc1"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textColor="@color/orange"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/textcsvc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Học viện có trụ sở chính tại Hà nội và 4 cơ sở đào tạo Đại học đặt tại Hà Nội và Thành phố Hồ Chí Minh với quy mô 25.000 sinh viên, 5 đơn nguyên Ký túc xá dành cho sinh viên. Học viện cũng là nơi đặt nhiều phòng thí nghiệm, phòng Lab mô phỏng của nhiều hang, doanh nghiệp hàng đầu như Samsung, NAVER, FPT, Viettel, NTT, Rạng Đông … phục vụ công tác nghiên cứu khoa học, chuyển giao công nghệ, đổi mới sáng tạo của thầy và trò Học viện."
        android:layout_below="@id/header_titlecsvc"
        android:layout_alignLeft="@id/imagecsvc1"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCSVC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textcsvc"
        android:layout_margin="10dp" />


</RelativeLayout>