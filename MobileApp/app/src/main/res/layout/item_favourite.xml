<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_bg"
    android:padding="10dp"
    android:layout_margin="10dp">


    <ImageView
        android:id="@+id/imageFavourite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_img"
        android:clipToOutline="true"
        tools:srcCompat="@tools:sample/avatars" />


    <TextView
        android:id="@+id/textNameSchool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageFavourite"
        android:textSize="17sp"
        android:text="Ptit"
        android:layout_marginTop="5dp" />

    <ImageView
        android:id="@+id/imageLocationFavourite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icon_location"
        android:layout_below="@+id/textNameSchool"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/textFavourite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="17sp"
        android:text="10, Trần Phú"
        android:layout_below="@+id/imageLocationFavourite"
        android:layout_marginTop="5dp" />

</RelativeLayout>
